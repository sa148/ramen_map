<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
       <% if @contribution.errors.any? %>
      <%= @contribution.errors.count %>すべての項目を入力してください:
      <ul>
        <% @contribution.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
      <% end %>
      <h1>ラーメンMap投稿変更</h1>
        <%= form_with model: @contribution, local:true, url:public_contributions_path,method: :post do |f| %>
          <div class="field">
            <%= f.label :タイトル %><br />
            <%= f.text_field :title %>
          </div>
          <div class="field">
          <%= f.label :タグ %><br />
          <%= f.text_field :tag_name %>
          </div>
          <div class="field">
            <%= f.label :評価 %><br />
            <%= f.text_area :comment %>
          </div>
          <p>レビュー</p>
          <div class="form-group row" id="star">
            <%= f.label :star,'レビュー ', class:'col-md-3 col-form-label' %>
            <%= f.hidden_field :star, id: :review_star %>
            <script>
            　$('#star').empty();
              $('#star').raty({
                size     : 36,
                starOff:  '<%= asset_path('star-off.png') %>',
                starOn : '<%= asset_path('star-on.png') %>',
             　 　　　scoreName: 'contribution[star]',
                half: false,
              });
            </script>
          </div>
          <div class="field">
            <br><%= f.file_field :image, accept: "image/*" %><br>
          </div>
          <br><%= f.submit '投稿編集', class: "btn btn-primary btn-sm btn-block sign_up"%>
        <% end %>
    </div>
  </div>
</div>