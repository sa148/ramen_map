  <%# @customers.each do |customer| %>
  <thead>
    <tr>
      <td>投稿者<%= @customers %><br>タイトル <%= contribution.title %></td>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>
        <%= link_to public_contribution_path(contribution.id) do%>
        <%= image_tag contribution.get_image %>
        <% end %>
        <br>コメント <%= contribution.comment %>
      </td>
    </tr>
  </tbody>
  <% end %>
  <%# end %>
</table>
</div>
