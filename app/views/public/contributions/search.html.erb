<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
<table class="mx-auto">
  <thead>
    <tr>
      <th>
        <h1>投稿検索ページ</h1>a
        <%= form_with url: search_public_contribution_path, method: :get, local: true do |f| %>
        <%= f.text_field :title %><br>
        <br><%= f.submit :検索, class: "btn btn-info btn-sm btn-block sign_up" %>
        <% end %>
        <% @contributions.each do |contribution| %>
        タイトル<%= contribution.title %>
    </tr>
  </thead>
  <tbody>
      <tr>
        <th>
          <%= link_to public_contribution_path(contribution.id) do%>
          <%= image_tag contribution.get_image %>
          <% end %>
        <br>コメント <%= contribution.comment %>
        </th>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
  </div>
    </div>