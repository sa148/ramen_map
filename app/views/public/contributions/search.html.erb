<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>投稿検索ページ</h1>
        <table class="mx-auto">
          <% @contributions.each do |contribution| %>
            <thead>
              <tr>
                <td>投稿者<%= contribution.customer.name %><br>タイトル <%= contribution.title %></td>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td><%= link_to public_contribution_path(contribution.id) do%>
                    <%= image_tag contribution.get_image %>
                    <% end %>
                </td>
                <td><br>コメント<br><%= contribution.comment %>
                  <br>レビュー<div id="star-rate<%= contribution.id%>">
                          <script>
                            $('#star-rate<%= contribution.id %>').empty();
                            $('#star-rate<%= contribution.id%>').raty({
                              size      : 36,
                              starOff   : '<%= asset_path('star-off.png') %>',
                              starOn    : '<%= asset_path('star-on.png') %>',
                              half      : false,
                              readOnly: true,
                              score: <%= contribution.star %>,
                            });
                          </script>
                            </div>
                </td>
              </tr>
        </tbody>
      </table>
      <% end %>
      <%= form_with url: search_public_contributions_path, method: :get, local: true do |f| %>
         <br><%= f.select :tag_id, @tag_list.map{|tag| [tag.tag_name, tag.id]} %><br>
         <br><%= f.submit :検索, class: "btn btn-info btn-sm btn-block sign_up" %>
      <% end %>
    </div>
  </div>
</div>